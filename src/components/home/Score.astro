---
import { t } from 'i18next'
import { Numbers } from '../shared/Numbers'
---

<section>
  <div class='mt-10 home-activities text-center'>
    <div class='home-activities-wrapper'>
      <div class='relative'>
        <img
          src='/img/item_num.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only="react" number='15000' duration='5' />
          </span>
          <p class='text-white'>{t('home.bullet_1')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/item_num2.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only="react" number='5000' duration='5' />
          </span>
          <p class='text-white'>{t('home.bullet_2')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/item_num3.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only="react" number='1370' duration='5' />
          </span>
          <p class='text-white'>{t('home.bullet_3')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/item_num4.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only="react" number='260' duration='5' />
          </span>
          <p class='text-white'>{t('home.bullet_4')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/item_num5.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only="react" number='13700' duration='5' />
          </span>
          <p class='text-white'>{t('home.bullet_5')}</p>
        </div>
      </div>
    </div>
  </div>
  <style>
    .home-activities-wrapper {
      display: flex;
      flex-wrap: wrap;
      /* Allow items to wrap on smaller screens */
      position: relative;
      z-index: 1;
      height: auto;
      /* Adjust to allow content to determine height */
    }

    .home-activities-wrapper div {
      width: 0;
      height: 500px;
      flex-grow: 1;
      transition: 0.5s ease;
      box-sizing: border-box;
      /* Include padding and border in the width */
    }

    .home-activities-wrapper > div:hover {
      cursor: crosshair;
      width: 300px;
      opacity: 1 !important;
    }
    .home-activities-wrapper div:hover ul {
      display: block;
    }

    .home-activities-wrapper div:hover video {
      opacity: 1 !important;
    }

    .home-activities-wrapper .info {
      width: 100%;
      font-size: 23px;
      color: white;
      font-weight: bold;
      background: linear-gradient(to bottom, transparent, black);
      height: 100%;
      padding: 10px;
      transition: none;
      display: grid;
      place-content: center;
    }

    @media (max-width: 768px) {
      .home-activities-wrapper .info {
        top: 0;
        height: 100%;
      }
      .home-activities-wrapper ul {
        display: block;
      }
      .home-activities-wrapper div {
        width: 100%;
        height: 500px;
      }
    }
  </style>
</section>
