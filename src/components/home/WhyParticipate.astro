---
import i18next, { t } from 'i18next'
---

<section
  class='bg-black bg-cover h-full bg-fixed bg-no-repeat py-20 text-center text-white'
>
  <div class='container mx-auto px-4'>
    <p class='text-[#e8001e] font-extrabold uppercase text-4xl'>
      {t('exhibitorReasons.title')}
    </p>
    <div class='grid sm:grid-cols-2 lg:grid-cols-3 gap-10'>
      <div class='relative'>
        {
          i18next.language === 'es' ? (
            <img src='/img/whyparticipate1.webp' class='w-full' />
          ) : (
            <img src='/img/whyparticipate1_en.webp' class='w-full' />
          )
        }
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate1')}
        </div>
      </div>
      <div class='relative'>
        {
          i18next.language === 'es' ? (
            <img src='/img/whyparticipate2.webp' class='w-full' />
          ) : (
            <img src='/img/whyparticipate2_en.webp' class='w-full' />
          )
        }
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate2')}
        </div>
      </div>
      <div class='relative'>
        {
          i18next.language === 'es' ? (
            <img src='/img/whyparticipate3.webp' class='w-full' />
          ) : (
            <img src='/img/whyparticipate3_en.webp' class='w-full' />
          )
        }
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate3')}
        </div>
      </div>
      <div class='relative'>
        {
          i18next.language === 'es' ? (
            <img src='/img/whyparticipate4.webp' class='w-full' />
          ) : (
            <img src='/img/whyparticipate4_en.webp' class='w-full' />
          )
        }
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate4')}
        </div>
      </div>
      <div class='relative'>
        <img src='/img/whyparticipate5.webp' class='w-full' />
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate5')}
        </div>
      </div>
      <div class='relative'>
        <img src='/img/whyparticipate6.webp' class='w-full' />
        <div
          class='absolute bottom-0 w-full square z-10 font-bold text-sm md:text-lg px-5'
        >
          {t('home.whyparticipate6')}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .square {
    display: grid;
    place-items: center;
    min-height: 100px;
    z-index: 1;
    background: rgb(18, 172, 255);
    background: linear-gradient(
      90deg,
      rgba(18, 172, 255, 1) 0%,
      rgba(10, 61, 255, 1) 100%
    );
    overflow: hidden;
    -ms-transform: skew(-10deg); /* IE 9 */
    -webkit-transform: skew(-10deg); /* Chrome, Safari, Opera */
    transform: skew(-10deg); /* Standard syntax */
  }
</style>
