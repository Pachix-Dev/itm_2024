---
import i18next, { t } from 'i18next'
const lang = i18next.language
const base = i18next.language === 'es' ? '' : `/${lang}`
---

<section class='bg-black py-10'>
  <div class='container mx-auto px-4'>
    <img
      src='/img/titleIndustry.webp'
      alt='Lidera la transformaciÃ³n digital de la industria 4.0'
    />
  </div>
  <p class='text-white font-extrabold text-6xl text-center'>
    {t('home.segmentos_title')}
  </p>
  <div class='mt-10 home-activities text-center'>
    <div class='home-activities-wrapper'>
      <div class='relative'>
        <a href=`${base}/logistica-inteligente
        `>
          <img
            src='/img/bg_segmentos_1.webp'
            alt='Categoria 1'
            class='w-full h-full object-cover absolute z-[-1]'
          />
          <div class='info'>
            <p class='text-white text-2xl'>{t('home.segmentos_1')}</p>
          </div>
        </a>
      </div>
      <div class='relative'>
        <img
          src='/img/bg_segmentos_2.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <p class='text-white text-2xl'>{t('home.segmentos_2')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bg_segmentos_3.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <p class='text-white text-xl'>{t('home.segmentos_3')}</p>
        </div>
      </div>
      <div class='relative'>
        <a href=`${base}/automatizacion-robotizacion
        `>
          <img
            src='/img/bg_segmentos_4.webp'
            alt='Categoria 1'
            class='w-full h-full object-cover absolute z-[-1]'
          />
          <div class='info'>
            <p class='text-white text-xl'>{t('home.segmentos_4')}</p>
          </div>
        </a>
      </div>
      <div class='relative'>
        <img
          src='/img/bg_segmentos_5.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <p class='text-white text-xl'>{t('home.segmentos_5')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bg_segmentos_6.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <p class='text-white text-xl'>{t('home.segmentos_6')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bg_segmentos_7.webp'
          alt='Categoria 1'
