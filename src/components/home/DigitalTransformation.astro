        />
        <div class='info'>
          <p class='text-white text-xl'>{t('home.segmentos_7')}</p>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .home-activities-wrapper {
    display: flex;
    flex-wrap: wrap;
    position: relative;
    z-index: 1;
    height: auto;
  }

  .home-activities-wrapper div {
    width: 0;
    height: 500px;
    flex-grow: 1;
    transition: 0.5s ease;
    box-sizing: border-box;
  }

  .home-activities-wrapper > div:hover {
    cursor: pointer;
    width: 300px;
    opacity: 1 !important;
  }
  .home-activities-wrapper div:hover ul {
    display: block;
  }

  .home-activities-wrapper div:hover video {
    opacity: 1 !important;
  }

  .home-activities-wrapper > div:hover .info {
    background: linear-gradient(to bottom, transparent 80%, black);
  }

  .home-activities-wrapper .info {
    width: 100%;
    color: white;
    font-weight: bolder;
    background: linear-gradient(to bottom, transparent, black);
    height: 100%;
    padding: 10px;
    transition: none;
    display: flex;
    flex-direction: column;
    justify-content: end;
  }

  @media (max-width: 1024px) {
    .home-activities-wrapper .info {
      top: 0;
      height: 100%;
    }
    .home-activities-wrapper ul {
      display: block;
    }
    .home-activities-wrapper div {
      width: 100%;
      height: 500px;
    }
  }
</style>
