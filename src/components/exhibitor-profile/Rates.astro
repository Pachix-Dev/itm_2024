---
import { t } from "i18next";
---

<section>
    <h2 class="text-center font-bold text-4xl text-[rgb(221,0,0)] py-10 px-5">
        {t("profile.rates.title")}
    </h2>

    <div
        class="flex flex-col md:flex-row flex-wrap justify-center items-center md:items-stretch gap-5 pb-5"
    >
        <div class="max-w-xs bg-white border border-gray-200 rounded-lg shadow">
            <img class="rounded-t-lg" src="/img/stand-1.webp" alt="stand 1" />
            <div class="p-5">
                <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-gray-900"
                    set:html={t("profile.rates.stand-1.title")}
                />
                <p>{t("profile.rates.stand-1.price")}</p>
                <p>{t("profile.rates.stand-1.type")}</p>
                <p class="mb-3 font-normal text-gray-700">
                    {t("profile.rates.stand-1.description")}
                </p>
            </div>
        </div>
        <div class="max-w-xs bg-white border border-gray-200 rounded-lg shadow">
            <img class="rounded-t-lg" src="/img/stand-2.webp" alt="stand 2" />
            <div class="p-5">
                <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-gray-900"
                    set:html={t("profile.rates.stand-2.title")}
                />
                <p>{t("profile.rates.stand-2.price")}</p>
                <p>{t("profile.rates.stand-2.type")}</p>
                <p class="mb-3 font-normal text-gray-700">
                    {t("profile.rates.stand-2.description")}
                </p>
            </div>
        </div>
        <div class="max-w-xs bg-white border border-gray-200 rounded-lg shadow">
            <img class="rounded-t-lg" src="/img/stand-3.webp" alt="stand 3" />
            <div class="p-5">
                <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-gray-900"
                    set:html={t("profile.rates.stand-3.title")}
                />
                <p>{t("profile.rates.stand-3.price")}</p>
                <p>{t("profile.rates.stand-3.type")}</p>
                <p class="mb-3 font-normal text-gray-700">
                    {t("profile.rates.stand-3.description")}
                </p>
            </div>
        </div>
    </div>
</section>
