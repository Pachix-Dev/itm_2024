---
import { AddCart } from './AddCart.jsx'

const combos = [
  {
    id: 1,
    title: 'Paquete carnes frías',
    price: 400,
    description: 'Tabla de carnes frías con ingredientes de la región',
    image: '/img/paquete1.webp',
  },
  {
    id: 2,
    title: 'Paquete Rothenburg',
    price: 2400,
    description: 'salchichas, cervezas y postres de la región',
    image: '/img/paquete2.webp',
  },
  {
    id: 3,
    title: 'Paquete Münich',
    price: 1650,
    description: 'salchichas y cervezas de la región',
    image: '/img/paquete3.webp',
  },
]
---

<div class='mt-10 grid grid-cols-3 gap-5'>
  {
    combos.map((combo) => (
      <div class=' w-full max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700 p-2'>
        <img
          class='p-8 rounded-lg mx-auto'
          src={combo.image}
          alt='Paquetes oktoberfest'
        />

        <div class='px-5 pb-5'>
          <h5 class='text-xl font-semibold text-white'>{combo.title}</h5>
          <div class='flex items-center justify-between'>
            <span class='text-3xl font-bold text-white'>${combo.price}</span>
            <AddCart item={combo} />
          </div>
        </div>
      </div>
    ))
  }
</div>
