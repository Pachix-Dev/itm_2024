---
import { AddCart } from './AddCart.jsx'

const combos = [
  {
    id: 1,
    name: '#1 Weißwurst mit Kartoffelsalat',
    price: 150,
    description:
      'Salchicha blanca de ternera asada a la parrilla, con una pieza de pan Acompañada de col agria y ensalada de papa.',
    image: '/img/paquete1.webp',
  },
  {
    id: 2,
    name: '#2 Currywurst mit Pommes frites',
    price: 150,
    description:
      'Salchicha roja de cerdo asada a la parrilla, bañada en salsa de curry, servida sobre papas a la francesa.',
    image: '/img/paquete2.webp',
  },
  {
    id: 3,
    name: '#3 Eisbein mit Sauerkraut und Bratkartoffeln',
    price: 295,
    description: 'Chamorro de cerdo acompañado de col agria y papas asadas.',
    image: '/img/paquete3.webp',
  },
  {
    id: 4,
    name: '#4 Combo Empresarial',
    price: 399,
    description:
      'Salchica blanca o roja asada a la parrilla, con una pieza de pan. Acompañada de col agria y ensalada de papa. INCLUYE TARRO y cerveza de 500ml',
    image: '/img/paquete4.webp',
  },
]
---

<div class='mt-10 grid lg:grid-cols-2 xl:grid-cols-3 gap-5 justify-center'>
  {
    combos.map((combo) => (
      <div class=' w-full max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700'>
        <img
          class='rounded-t-lg object-cover w-full h-52 md:h-60'
          src={combo.image}
          alt='Paquetes oktoberfest'
        />

        <div class='p-5'>
          <h5 class='text-xl font-semibold text-white'>{combo.name}</h5>
          <p class='text-white'>{combo.description}</p>
          <div class='mt-2 flex items-center justify-between'>
            <span class='text-3xl font-bold text-white'>${combo.price}</span>
            <AddCart item={combo} client:only />
          </div>
        </div>
      </div>
    ))
  }
</div>
