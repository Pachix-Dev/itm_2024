---
import { t } from "i18next";
import Dates from "../itzamna/Dates.astro";
---

<section class="bg-[url('/img/bgcontactos.webp')] bg-cover py-20 text-white">
  <div
    class="grid place-items-center my-3 square_blue w-full max-w-[500px] font-bold text-xl sm:text-2xl md:text-4xl lg:text-6xl px-4 mx-auto"
  >
    <h2 class="text-center text-5xl font-bold my-10">
      {t("itzamna.objetivo")}
    </h2>
  </div>
  <p class="mx-5 text-center text-2xl md:mx-20 mt-12">
    {t("itzamna.objetivo_desc")}
  </p>
  <div
    class="mx-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-10 mb-32 md:mx-20 text-lg"
  >
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_1")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_2")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_3")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_4")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_5")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_6")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_7")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_8")}
    </div>
    <div class="bg-blue-500/40 rounded-md p-7 text-justify">
      {t("itzamna.objetivo_9")}
    </div>
  </div>
  <div
    class="grid place-items-center my-3 square_blue w-full max-w-[500px] font-bold text-xl sm:text-2xl md:text-4xl lg:text-6xl px-4 mx-auto"
  >
    <h2 class="text-center text-5xl font-bold my-5">
      {t("itzamna.dates")}
    </h2>
  </div>
  <Dates />
</section>
