---
import { t } from "i18next";
---

<div
    class="text-white bg-gradient-to-b from-[#200F0E] via-[#1A202C] to-[#6B2638] lg:p-4 p-2 w-full h-auto bg-cover bg-center relative z-0"
>
    <div
        class="py-16 grid justify-items-center text-white"
        data-aos="fade-up"
        data-aos-duration="3000"
    >
        <div class="square_blue lg:w-1/2 w-fit m-1">
            <p class="text-4xl font-bold uppercase p-0">
                {t("itzamna.evaluation")}
            </p>
            {t("itzamna.evaluation_desc")}
        </div>
        <div class="lg:p-2 lg:m-2 p-0 m-1">
            <div class="grid lg:grid-cols-5 grid-cols-1 text-xl">
                <div class="bg-[#363678b3] lg:p-2 m-2 p-0 rounded">
                    <p class="grid justify-items-center text-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-16"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75"
                            ></path>
                        </svg>

                        {t("itzamna.evaluation_1")}
                    </p>
                </div>
                <div class="bg-[#363678b3] lg:p-2 m-2 p-0 rounded">
                    <p class="grid justify-items-center text-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-16"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
                            ></path>
                        </svg>
                        {t("itzamna.evaluation_2")}
                    </p>
                </div>
                <div class="bg-[#363678b3] lg:p-2 m-2 p-0 rounded">
                    <p class="grid justify-items-center text-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-16"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                            ></path>
                        </svg>

                        {t("itzamna.evaluation_3")}
                    </p>
                </div>
                <div class="bg-[#363678b3] lg:p-2 m-2 p-0 rounded">
                    <p class="grid justify-items-center text-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-16"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M2.25 18 9 11.25l4.306 4.306a11.95 11.95 0 0 1 5.814-5.518l2.74-1.22m0 0-5.94-2.281m5.94 2.28-2.28 5.941"
                            ></path>
                        </svg>

                        {t("itzamna.evaluation_4")}
                    </p>
                </div>
                <div class="bg-[#363678b3] lg:p-2 m-2 p-0 rounded">
                    <p class="grid justify-items-center text-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-16"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75"
                            ></path>
                        </svg>

                        {t("itzamna.evaluation_5")}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-2xl" data-aos="fade-up" data-aos-duration="3000">
        <div class="lg:flex grid">
            <div class="lg:m-3 m-0">
                <p
                    class="square_red_2 text-3xl font-extrabold uppercase py-3 lg:mx-6 mx-0"
                >
                    {t("itzamna.committee")}
                </p>
                <p class="lg:mx-10 mx-2 my-3 p-3 bg-[#363678b3]">
                    {t("itzamna.committee_desc")}
                </p>
            </div>
            <div class="lg:m-5 m-0">
                <p
                    class="square_red_2 text-3xl font-extrabold uppercase py-3 lg:mx-6 mx-0"
                >
                    {t("itzamna.finalists")}
                </p>
                <p class="lg:mx-10 mx-2 my-3 p-3 bg-[#363678b3]">
                    {t("itzamna.finalists_desc")}
                </p>
            </div>
        </div>
        <div class="">
            <p
                class="square_red_2 lg:text-5xl text-4xl font-extrabold uppercase py-3 lg:mx-6 mx-0"
            >
                {t("itzamna.Awards")}
            </p>
            <div class="lg:mx-10 mx-2 mt-4 bg-[#363678b3] lg:flex grid">
                <div class="w-fit m-5">
                    <p>{t("itzamna.awards_desc")}</p>
                </div>
                <div class="lg:m-5 m-0">
                    <div class="flex text-xl">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-10 mx-3"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"
                            ></path>
                        </svg>
                        <p class="flex">
                            {t("itzamna.awards_1")}
                        </p>
                    </div>
                    <div class="flex">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-24 mx-3"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
                            ></path>
                        </svg>
                        <p class="">
                            {t("itzamna.awards_2")}
                            <a
                                class="text-blue-400"
                                href="https://www.google.com/maps/place/Pabellon+Escénico/@19.4227568,-99.1949748,1469m/data=!3m1!1e3!4m15!1m8!3m7!1s0x85d201004aa0fe5b:0x3857176b007d6994!2sPabellon+Escénico!8m2!3d19.4236882!4d-99.1930243!10e1!16s%2Fg%2F11ldryklr1!3m5!1s0x85d201004aa0fe5b:0x3857176b007d6994!8m2!3d19.4236882!4d-99.1930243!16s%2Fg%2F11ldryklr1?entry=ttu&g_ep=EgoyMDI1MDcxNi4wIKXMDSoASAFQAw%3D%3D"
                                >{t("itzamna.btn_map")}</a
                            >
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
