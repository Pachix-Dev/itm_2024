---
import { t } from "i18next";
---

<div
  class="bg-[url('/img/bg-itzamna/bg-itzamna2.png')] w-full bg-cover bg-center relative z-0"
>
  <div class="sm:p-4">
    <div class="flex">
      <div class="w-fit flex flex-col justify-center">
        <div
          class="bg-red-600 text-white sm:rounded-r-full h-fit px-10 py-3"
          data-aos="fade-right"
          data-aos-duration="3000"
        >
          <p class="text-left text-5xl font-extrabold">
            {t("itzamna.title")}
          </p>
          <p class="text-xl font-semibold">
            {t("itzamna.description")}
          </p>
        </div>

        <div
          class="bg-[#00001cb3] text-white mx-2 sm:mx-16 mt-3 p-2 sm:p-5 rounded"
          data-aos="fade-right"
          data-aos-duration="3000"
        >
          <p class="text-3xl font-bold text-center">
            {t("itzamna.by")}
          </p>
          <p class="text-2xl font-semibold text-center py-5">
            {t("itzamna.subtitle")}
          </p>
          <p class="text-justify text-xl pb-5" set:html={t("itzamna.text_1")} />
        </div>
      </div>

      <img
        src="/img/bg-itzamna/itzamna1.png"
        data-aos="fade-down"
        data-aos-duration="3000"
        alt=""
        class="w-fit h-fit lg:flex hidden"
      />
    </div>

    <div class="bg-[#00001cb3] text-white mx-2 sm:mx-16 p-5 rounded">
      <p class="text-left text-3xl uppercase font-bold pb-5">
        {t("itzamna.what_is")}
      </p>
      <p
        class="text-justify font-semibold text-xl px-5 py-3"
        set:html={t("itzamna.text_2")}
      />
      <p
        class="text-justify font-semibold text-xl px-5 py-3"
        set:html={t("itzamna.text_3")}
      />
      <div class="m-4 font-semibold text-2xl font-mono">
        <ul class="space-y-3">
          <li class="flex items-center gap-2">
            <span class="text-green-400">✔</span>
            {t("itzamna.proyecto_1")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-green-400">✔</span>
            {t("itzamna.proyecto_2")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-green-400">✔</span>
            {t("itzamna.proyecto_3")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-green-400">✔</span>
            {t("itzamna.proyecto_4")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-green-400">✔</span>
            {t("itzamna.proyecto_5")}
          </li>
        </ul>
      </div>
    </div>
    <div class="flex justify-center items-center">
      <div
        class="bg-[#00001cb3] flex text-white mx-2 sm:mx-16 my-16 p-5 rounded"
      >
        <img
          src="/img/bg-itzamna/itzamna2.png"
          alt="itzamna"
          class="md:flex hidden"
        />
        <div>
          <p class="font-semibold text-xl p-2">
            {t("itzamna.text_4")}
          </p>

          <p class="text-3xl font-bold p-2">{t("itzamna.who")}</p>
          <div
            class="grid text-center grid-cols-1 sm:grid-cols-2 text-xl font-mono"
          >
            <p class="grid m-3 p-2 rounded justify-items-center bg-[#00001cb3]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z"
                ></path>
              </svg>

              {t("itzamna.who_1")}
            </p>
            <p class="grid m-3 p-2 rounded justify-items-center bg-[#00001cb3]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 21v-7.5a.75.75 0 0 1 .75-.75h3a.75.75 0 0 1 .75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349M3.75 21V9.349m0 0a3.001 3.001 0 0 0 3.75-.615A2.993 2.993 0 0 0 9.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 0 0 2.25 1.016c.896 0 1.7-.393 2.25-1.015a3.001 3.001 0 0 0 3.75.614m-16.5 0a3.004 3.004 0 0 1-.621-4.72l1.189-1.19A1.5 1.5 0 0 1 5.378 3h13.243a1.5 1.5 0 0 1 1.06.44l1.19 1.189a3 3 0 0 1-.621 4.72M6.75 18h3.75a.75.75 0 0 0 .75-.75V13.5a.75.75 0 0 0-.75-.75H6.75a.75.75 0 0 0-.75.75v3.75c0 .414.336.75.75.75Z"
                ></path>
              </svg>

              {t("itzamna.who_2")}
            </p>

            <p class="grid m-3 p-2 rounded justify-items-center bg-[#00001cb3]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                ></path>
              </svg>

              {t("itzamna.who_3")}
            </p>
            <p class="grid m-3 p-2 rounded justify-items-center bg-[#00001cb3]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5"
                ></path>
              </svg>

              {t("itzamna.who_4")}
            </p>
            <p class="grid m-3 p-2 rounded justify-items-center bg-[#00001cb3]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0 0 12 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75Z"
                ></path>
              </svg>

              {t("itzamna.who_5")}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-[#00001cb3] text-white mx-32 p-10 rounded">
    <p class="text-left text-3xl uppercase font-bold pb-5">
      {t("itzamna.what_is")}
    </p>
    <p
      class="text-justify font-semibold text-xl px-5 py-3"
      set:html={t("itzamna.text_2")}
    />
    <p
      class="text-justify font-semibold text-xl px-5 py-3"
      set:html={t("itzamna.text_3")}
    />
    <div class="m-4 font-semibold text-2xl font-mono">
      <ul class="space-y-3">
        <li class="flex items-center gap-2">
          <span class="text-green-400">✔</span>
          {t("itzamna.proyecto_1")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-green-400">✔</span>
          {t("itzamna.proyecto_2")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-green-400">✔</span>
          {t("itzamna.proyecto_3")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-green-400">✔</span>
          {t("itzamna.proyecto_4")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-green-400">✔</span>
          {t("itzamna.proyecto_5")}
        </li>
      </ul>
    </div>
  </div>
</div>
