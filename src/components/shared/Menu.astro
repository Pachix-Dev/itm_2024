      { title: t('menu.visitors_1'), href: '/por-que-visitarnos' },
      { title: t('hotels.title'), href: '/por-que-visitarnos/#tarifas' },
      {
        title: t('hotels.visitplan'),
        href: '/por-que-visitarnos/#planea-tu-visita',
      },
      {
        title: t('menu.visitors_5'),
        href: '/programa-2025',
      },

      /*{     
        title: t('menu.visitors_4'),
        href: '/files/United-Meetings-Agreement-2023-ENG.pdf',
        target: '_blank',
      },*/
    ],
  },
  {
    title: t('menu.past_events'),
    items: [
      {
        title: '2024',
        items: [
          {
            title: t('menu.itm2024_1'),
            href: '/directorio-digital',
          },
          {
            title: t('menu.itm2024_2'),

            href: '/files/PASAPORTE-ITM-2024-IMPRESION_compressed.pdf',
            target: '_blank',
          },
          {
            title: t('menu.itm2024_3'),
            href:
              i18next.language === 'en'
                ? '/files/AFTERSHOW-REPORT-ITM-AMOF-2024-VF-ENG_compressed.pdf'
                : '/files/RESULTADOS-ITM-AMOF-2024-VF-compressed.pdf',
