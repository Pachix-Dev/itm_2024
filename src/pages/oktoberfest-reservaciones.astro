---
import LayoutOktoberfest from '../layouts/LayoutOktoberfest.astro'
import Products from '../components/oktoberfest/Products.astro'
---

<LayoutOktoberfest title='Oktoberfest | reservaciones'>
  <main class='md:flex grid'>
    <section class='p-5 sm:p-10 w-full sm:w-3/5 sm:order-1'>
      <Products />
    </section>
    <aside
      class='sm:fixed right-0 top-0 z-50 p-5 w-full sm:w-2/5 sm:order-2 bg-[#f7f7f8] h-auto sm:h-full border rounded-lg shadow-lg'
    >
      <p class='text-center text-2xl font-bold hidden md:block text-black'>
        Resumen del pedido
      </p>
    </aside>
  </main>
</LayoutOktoberfest>
