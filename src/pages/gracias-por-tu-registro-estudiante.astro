---
import i18next, { changeLanguage, t } from 'i18next'
import Layout from '../layouts/Layout.astro'
import Confettti from '../components/shared/Confetti'
import { Redirect } from '../components/shared/Redirect.jsx'
import { DonwloadAccess } from '../components/register/DonwloadAccess'
import { ProgramVip } from '../components/register/ProgramVip'
import MarqueeSponsors from '../components/register/MarqueeSponsors.astro'
import { sponsors } from '../data/constans_logos'

changeLanguage('es')

const currentLanguage = i18next.language
---

<Layout title='ITM  | Gracias por contactarnos'>
  <div class='w-screen h-full p-5 lg:p-20 bg-black'>
    <div
      class='rounded-lg px-4 ecomondo-bloq-1 w-full h-full shadow-2xl text-white flex flex-col items-center justify-center relative'
    >
      <Confettti client:visible />

      <div class='grid md:flex gap-6 place-items-center w-full justify-center'>
        <div class='grid place-items-center place-content-center w-full'>
          <div
            class=`box text-center lg:text-6xl text-5xl after:content-['${t('thanks_page.title2')}']`
            id='box1'
          >
            {t('thanks_page.title')}
          </div>
          <img
            class='mt-10 w-52 z-10'
            src='/img/Logo_ITM.webp'
            alt='ecomondo feria de sustentabilidad'
          />
          {
            /* <p
            class='font-bold text-center'
            set:html={t('thanks_page.description')}
          />*/
          }
          <p
            class='font-bold text-center text-xl'
            set:html={t('thanks_page.description_3')}
          />
        </div>
      </div>
    </div>
    <section class='my-10 max-w-screen-lg mx-auto'>
      <p class='text-center font-extrabold text-3xl mb-5 text-white'>
        {t('home.title-sponsors')}
      </p>
      <MarqueeSponsors partners={sponsors} isLeftToRight />
    </section>
  </div>
</Layout>
<style>
  .box {
    color: white;
    font-weight: 800;
  }

  #box1::after {
    display: flex;
    transform: rotateX(180deg);
    background-image: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 10%,
      rgba(255, 255, 255, 0.5)
    );
    -webkit-background-clip: text;
    color: transparent;
  }
</style>
