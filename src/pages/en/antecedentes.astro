---
import { t, changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";

changeLanguage("en");
---

<Layout title={`ITM 2024 | ${t('menu.about_2')}`}>
    <main>
        <img class="mx-auto mt-10 w-11/12 lg:w-8/12" src="/img/bgabout_2.jpg" alt="banner mexico hannover 2018">
        <div class="px-10 pt-10 lg:px-20">
            <h1 class="text-3xl font-bold">{t("background.title")}</h1>
            <p class="text-lg text-justify leading-relaxed text-gray-500 pt-5">{t("background.description_1")}</p>
        </div>
        <div class="px-10 pt-10 flex flex-wrap lg:px-56">
            <div class="py-5 w-full md:w-1/2 xl:w-1/4 md:border-r-2 md:border-b-2 xl:border-b-0 flex items-center justify-center">
                <p class="text-2xl text-center leading-normal md:px-6" set:html={t("background.stadistic_1")} />
            </div>
            <div class="py-5 w-full md:w-1/2 xl:w-1/4 xl:border-r-2 md:border-b-2 xl:border-b-0 flex items-center justify-center">
                <p class="text-2xl text-center leading-normal md:px-6" set:html={t("background.stadistic_2")} />
            </div>
            <div class="py-5 w-full md:w-1/2 xl:w-1/4 md:border-r-2 flex items-center justify-center flex-col">
                <h2 class="text-2xl xl:text-4xl font-bold text-center leading-normal text-[#e00d1b] md:px-6" set:html={t("background.stadistic_3")} />
                <p class="text-xl xl:text-2xl text-center leading-normal md:px-6 pt-2" set:html={t("background.stadistic_3_1")} />
            </div>
            <div class="py-5 w-full md:w-1/2 xl:w-1/4 flex items-center justify-center">
                <p class="text-2xl text-center leading-normal md:px-6" set:html={t("background.stadistic_4")} />
            </div>
        </div>
        <iframe
            src="https://www.youtube-nocookie.com/embed/dM-LExvQw-A"
            class="px-4 lg:px-56 mt-10 mb-16 w-full min-h-[150px] md:min-h-[300px] xl:min-h-[400px]"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen=""></iframe>
    </main>
</Layout>

<style is:inline>
    p strong {
        color: #e00d1b;
        font-size: 4rem;
    }
</style>