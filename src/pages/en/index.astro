---
import i18next, { changeLanguage, t } from "i18next";
import Hero from "../../components/home/Hero.astro";
import Sponsors from "../../components/home/Sponsors.astro";
import WhyParticipate from "../../components/home/WhyParticipate.astro";
import OtherEvents from "../../components/home/OtherEvents.astro";
import Gallery from "../../components/shared/Gallery";
import { home } from "../../data/constans_gallery.js";
import Score from "../../components/home/Score.astro";
import Marquee from "../../components/shared/Marquee.astro";
import { media_1, media_2, alliesStrategic } from "../../data/constans_logos";
import VideoMain from "../../components/home/VideoMain.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import BecomeAnExhibitor from "../../components/exhibitor-profile/BecomeAnExhibitor.astro";
import Buyers from "../../components/home/Buyers.astro";
import TestimonialVisitor from "../../components/home/TestimonialVisitor.astro";
import Score5Years from "../../components/home/Score5years.astro";
import FreeRegister from "../../components/home/FreeRegister.astro";
import DigitalTransformation from "../../components/home/DigitalTransformation.astro";
import SocialMedia from "../../components/home/SocialMedia.astro";
import Layout from "@/layouts/Layout.astro";

changeLanguage("en");
---

<Layout title='ITM 2025 | Home'>
  <main class='bg-black'>
    <img
      src={i18next.language === 'es'
        ? '/itm_2025_esp.webp'
        : '/itm_2025_eng.webp'}
      alt='ITM 2025'
      class='w-full h-full'
    />
    <FreeRegister />

    <img
      src={i18next.language === 'es'
        ? '/itm_2025_1_new_esp.webp'
        : '/itm_2025_1_new.webp'}
      alt='ITM 2025'
      class='w-full h-full'
    />
    <img
      src={i18next.language === 'es'
        ? '/itm_2025_segundo_new_esp.webp'
        : '/itm_2025_segundo_new.webp'}
      alt='ITM 2025'
      class='w-full h-full'
    />
    <Score />
    {
      /* <Hero />
    
    <OtherEvents />
    <VideoMain />
    
    <Score5Years />
   
    <BecomeAnExhibitor />
    <WhyParticipate />
    <DigitalTransformation />
    <Testimonials />
    <Buyers />
    <TestimonialVisitor />*/
    }

    <div class='bg-white pt-10'>
      <Sponsors />
      <div
        class='mt-10 square_red text-center font-bold text-2xl xl:text-4xl py-5 px-10 uppercase text-white w-fit mx-auto'
      >
        {t('home.strategic_allies')}
      </div>
      <Marquee partners={alliesStrategic} isLeftToRight={true} />
      <div
        class='mt-10 square_red text-center font-bold text-2xl xl:text-4xl py-5 px-10 uppercase text-white w-fit mx-auto'
      >
        {t('home.platinum_media')}
      </div>
      <Marquee partners={media_1} isLeftToRight={true} />
      <Marquee partners={media_2} isLeftToRight={false} />
      <div
        class='mt-10 square_red text-center font-bold text-2xl xl:text-4xl py-5 px-10 uppercase text-white w-fit mx-auto'
      >
        {t('home.bestitm')}
      </div>
      <Gallery
        images={home}
        galleryID='gallery'
        client:only='react'
        class='py-10'
      />
    </div>
    <section class='bg-white'>
      <div
        class='container mx-auto px-4 py-5 grid md:grid-cols-2 text-2xl text-center font-bold'
      >
        <div class='grid place-items-center place-content-center'>
          <img
            src='/ederRangel.png'
            alt='Eder Raúl Rangel Déziga'
            width='150'
          />
          <p>{t('home.contact_mexico_latam')}</p>
          <p class='mt-2 text-lg'>
            Eder Raúl Rangel Déziga<br />
            Tel. +52 55 7028 3335 ext. 809
          </p>
          <a class='text-[#E8001E] text-xl' href='mailto:eder.rangel@igeco.mx'
            >eder.rangel@igeco.mx</a
          >
        </div>
        <div class='grid place-items-center place-content-center'>
          <img src='/simoneRobering.webp' alt='Simone Robering' width='160' />
          <p>{t('home.contact_international')}</p>
          <p class='mt-2 text-lg'>
            Simone Robering<br />
            Tel. +49 511 89 33128
          </p>
          <a
            class='text-[#E8001E] text-xl'
            href='mailto:simone.Robering@messe.de'>simone.robering@messe.de</a
          >
        </div>
      </div>
    </section>
    {/*<SocialMedia />*/}
  </main>
</Layout>

