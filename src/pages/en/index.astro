---
import i18next, { changeLanguage, t } from "i18next";
import Hero from "../../components/home/Hero.astro";
import Sponsors from "../../components/home/Sponsors.astro";
import WhyParticipate from "../../components/home/WhyParticipate.astro";
import OtherEvents from "../../components/home/OtherEvents.astro";
import Gallery from "../../components/shared/Gallery";
import Score from "../../components/home/Score.astro";
import Marquee from "../../components/shared/Marquee.astro";
import { media_1, media_2, alliesStrategic } from "../../data/constans_logos";
import VideoMain from "../../components/home/VideoMain.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import BecomeAnExhibitor from "../../components/exhibitor-profile/BecomeAnExhibitor.astro";
import Buyers from "../../components/home/Buyers.astro";
import TestimonialVisitor from "../../components/home/TestimonialVisitor.astro";
import Score5Years from "../../components/home/Score5years.astro";
import FreeRegister from "../../components/home/FreeRegister.astro";
import DigitalTransformation from "../../components/home/DigitalTransformation.astro";
import SocialMedia from "../../components/home/SocialMedia.astro";
import Layout from "@/layouts/Layout.astro";
import Events from "@/components/home/Events.astro";
import { events } from "../../data/constans_events";

changeLanguage("en");

const lang = i18next.language;
const base = i18next.language === "es" ? "" : `/${lang}`;
---

<Layout title='ITM 2025 | Home'>
  <main class='bg-black'>
    <img
      src={i18next.language === 'es'
        ? '/kv_itm_2025_esp_vf.webp'
        : '/kv_itm_2025_eng_vf.webp'}
      alt='ITM 2025'
      class='w-full h-full'
    />
    <FreeRegister />
    <section class='bg-white'>
      <div class='grid lg:flex items-center'>
        <img
          src='/img/itm_program_ce.webp'
          class='lg:w-3/5 w-full'
          data-aos='fade-right'
          data-aos-duration='1000'
        />
        <div
          class='text-right p-4 lg:pe-10'
          data-aos='fade-up'
          data-aos-duration='1000'
        >
          <p class='text-4xl lg:text-6xl font-extrabold'>
            {t('home.text_1')}
            <span class='text-[#CA061A]'>{t('home.text_2')}</span>
          </p>
          <p class='mb-10 text-lg' set:html={t('home.text_3')} />

          <a
            href={`${base}/perfil-del-expositor`}
            class='rounded-2xl border-2 border-black hover:border-[#CA061A] hover:text-[#CA061A] p-2'
          >
            {t('home.text_4')}
          </a>
        </div>
      </div>
      <div
        class='grid grid-cols-2 md:flex md:flex-wrap justify-center gap-5 my-10 px-5'
      >
        <div
          class='rounded-2xl border-2 border-black p-5'
          data-aos='fade-up'
          data-aos-duration='1000'
        >
          <div class='bg-[#0A37FE] rounded-full p-4 w-20 h-20 text-white'>
            <svg
              viewBox='0 0 100 100'
              xmlns='http://www.w3.org/2000/svg'
              xmlns:xlink='http://www.w3.org/1999/xlink'
              aria-hidden='true'
              role='img'
              preserveAspectRatio='xMidYMid meet'
              ><g id='SVGRepo_bgCarrier' stroke-width='0'></g><g
                id='SVGRepo_tracerCarrier'
                stroke-linecap='round'
                stroke-linejoin='round'></g><g id='SVGRepo_iconCarrier'
                ><path
