---
import i18n, { t, changeLanguage } from "i18next";
// @ts-ignore
import { localizePath } from "astro-i18next";
import Layout from "../../layouts/Layout.astro";
import BecomeAnExhibitor from "../../components/exhibitor-profile/BecomeAnExhibitor.astro";
import WhyExhibit from "../../components/exhibitor-profile/WhyExhibit.astro";
import Segments from "../../components/exhibitor-profile/Segments.astro";
import Rates from "../../components/exhibitor-profile/Rates.astro";
import RedButton from "../../components/shared/RedButton.astro";

changeLanguage("en");
---

<Layout title={`ITM 2025 | ${t('menu.exhibitors_3')}`}>
  <main>
    <BecomeAnExhibitor />
    <Rates />
    <WhyExhibit />
    <Segments />

    <section
      class='bg-gradient-to-r from-[#7f1b2d] to-[#014c83] flex flex-col items-center px-5 py-5 gap-5 md:py-20'
    >
      <RedButton
        href={i18n.language === 'en'
          ? '/files/ITM-FACTSHEET-ENG-V2-2025_compressed.pdf'
          : '/files/ITM-FACTSHEET-ESP-V2-2025_compressed.pdf'}
        withIcon={false}
        className='text-2xl text-center font-bold'
        openInNewTab={true}
      >
        {t('profile.btn-exhibitor-info')}
      </RedButton>
      {
        /* <RedButton
        href={localizePath('/soy-expositor')}
        withIcon={false}
        className='text-2xl text-center font-bold'
      >
        {t('profile.btn-exhibitor')}
      </RedButton>
      */
      }
    </section>
    <section class='mb-10'>
      <div class='flex flex-col items-center flex-1 pt-10 mx-auto'>
        <h2 class='text-2xl text-center font-medium pb-5 px-5'>
          {t('exhibitorReasons.become_exhibitor')}
        </h2>
        <img class='w-auto h-52' src='/img/ederRangel.webp' alt='Eder Rangel' />
