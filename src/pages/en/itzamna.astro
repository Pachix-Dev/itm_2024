---
import Layout from "@/layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title={`ITM | ${t("itzamna.title")}`}>
    <main class="mx-5 md:mx-16 lg:mx-32 pb-5 my-20">
        <h1 class="text-left text-[#E42128] text-5xl font-extrabold py-5">
            {t("itzamna.title")}
        </h1>
        <p class="italic mb-5 text-lg">* {t("itzamna.changes")}</p>
        <section>
            <h3 class="text-3xl pb-3">{t("itzamna.stages")}</h3>
            <div class="md:ml-5"></div>
        </section>
    </main></Layout
>
