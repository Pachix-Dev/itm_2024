---
import { changeLanguage } from 'i18next'
import LayoutRegister from '../layouts/LayoutRegister.astro'
import { Upgrade } from '../components/register/Upgrade.jsx'

changeLanguage('es')
---

<LayoutRegister title='Actualizar a VIP'>
  <main class='mt-10 md:mt-20 mx-6 py-10'>
    <h1 class='text-center font-bold text-2xl md:text-4xl lg:text-5xl'>
      <span class='text-[#E42128] text-3xl md:text-5xl lg:text-6xl leading-snug'
        >Premium te espera:</span
      ><br />
      da el salto y disfruta<br />
      de todas nuestras ventajas
    </h1>
    <Upgrade client:only='react' />
  </main>
</LayoutRegister>
<style>
  body {
    background-color: #111827;
    color: white;
  }
</style>
