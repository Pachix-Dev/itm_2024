---
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import Confettti from "../components/shared/Confetti";
import { Redirect } from "../components/shared/Redirect.jsx";
import { DownloadOktoberfest } from "../components/oktoberfest/DownloadOktoberfest.jsx";

changeLanguage("es");
---

<Layout title='ITM  | Gracias por contactarnos'>
  <Redirect client:only='react' />
  <div class='w-screen h-full p-5 lg:p-20 bg-black'>
    <div
      class='rounded-lg px-4 ecomondo-bloq-1 w-full h-full shadow-2xl text-white flex flex-col items-center justify-center relative'
    >
      <Confettti client:visible />

      <div class='grid md:flex gap-6 place-items-center w-full justify-center'>
        <div class='grid place-items-center place-content-center w-full'>
          <div class='box text-center lg:text-6xl text-5xl' id='box1'>
            Gracias por tu compra
          </div>
          <img
            class='mt-10 w-52 z-10'
            src='/img/Logo_ITM.webp'
            alt='ecomondo feria de sustentabilidad'
          />
          <p class='font-bold text-center'>
            ¡Fantástico! haz tu compra fue procesada correctamente.
          </p>
          <p class='text-center mb-5'>
            ¡Pronto recibiras un correo de confirmación!
          </p>
          <DownloadOktoberfest client:only='react' text='Descargar tu gafete' />
        </div>
      </div>
    </div>
  </div>
</Layout>
<style>
  .box {
    color: white;
    font-weight: 800;
    animation: aniload 3s;
  }

  #box1::after {
    content: 'Gracias por registrarte';
    display: flex;
    transform: rotateX(180deg);
    background-image: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 10%,
      rgba(255, 255, 255, 0.5)
    );
    -webkit-background-clip: text;
    color: transparent;
  }
</style>
